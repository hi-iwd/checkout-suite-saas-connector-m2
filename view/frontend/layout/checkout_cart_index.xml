        <referenceBlock name="checkout.cart.totals">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="block-totals" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="extra" xsi:type="array">
                                    <item name="component" xsi:type="string">uiComponent</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">IWD_CheckoutConnector/payment/cart/iwd_cart_sidebar_wrapper</item>
                                    </item>
                                    <item name="children" xsi:type="array">
                                        <item name="iwd_paypal_credit_msg" xsi:type="array">
                                            <item name="component" xsi:type="string">IWD_CheckoutConnector/js/view/payment/cart/iwd_paypal_credit_msg</item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>